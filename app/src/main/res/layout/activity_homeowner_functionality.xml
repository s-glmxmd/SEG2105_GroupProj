<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeownerFunctionality">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnServiceSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnServiceSearch"
            android:text="Search for Services" />

        <Button
            android:id="@+id/btnViewBookedAndRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnViewBookedAndRate"
            android:text="View and Rate Booked Services" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>